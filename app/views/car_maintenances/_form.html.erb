<%= form_with(model: [@car, @car_maintenance], class: "contents") do |form| %>
  <% if car_maintenance.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(car_maintenance.errors.count, "error") %> prohibited this car_maintenance from being saved:</h2>

      <ul class="list-disc ml-6">
        <% car_maintenance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-2">
    <div><%= t('views.car_maintenances.new.name') %></div>
    <div>
      <%= form.select(:maintenance_type, CarMaintenance::MAINTENANCE_TYPES.map { |m| [ m[:label], m[:name] ] }, {}, class:"daisy-select") %>
    </div>
  </div>

  <div class="mt-2">
    <div><%= t('views.car_maintenances.new.title') %></div>
    <div>
      <%= form.text_field(:title, class: "daisy-input") %>
    </div>
  </div>

  <div>
    <div><%= t('views.car_maintenances.new.time') %></div>
    <div data-controller="datepicker" class="flex items-center">
      <%= form.text_field(:performed_at, { readonly: true, value: @car_maintenance.performed_at&.strftime('%Y-%m-%d'), class:"daisy-input" , data: { 'datepicker-target': 'input' } } ) %>
      <div data-datepicker-target="toggle" class="-ml-6"><%= image_tag('calendar.svg', width: 20) %></div>
    </div>
  </div>

  <div class="mt-2">
    <div><%= t('views.car_maintenances.new.description') %></div>
    <div>
      <%= form.text_area(:description, class: "daisy-textarea") %>
    </div>
  </div>

  <div class="mt-2">
    <div><%= "Bengkel" %></div>
    <div>
      <%= form.select :car_shop_id,
              @car_shops.map { |c| [c.name, c.id] },
              { include_blank: "- Pilih Bengkel -" }, class: "daisy-select" %>
    </div>

    <div class="mt-8">
      <%= form.submit t(@car_maintenance.new_record? ? 'views.car_maintenances.new.create' : 'views.car_maintenances.edit'),
        class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-red-800 hover:bg-red-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>
<% end %>
