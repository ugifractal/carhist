<div class="space-y-4 text-white">

  <div>
    <%= form.label :car_brand_id, "Brand", class: "block mb-1 font-medium" %>
    <%= form.select :car_brand_id,
        CarBrand.all.map { |b| [b.name, b.id] },
        { include_blank: "- Pilih Brand -" },
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF] focus:outline-none" %>
  </div>

  <div>
    <%= form.label :model, "Model", class: "block mb-1 font-medium" %>
    <%= form.text_field :model,
        placeholder: "Contoh: Avanza, Civic, Pajero",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF] focus:outline-none" %>
  </div>

  <div>
    <%= form.label :year, "Tahun Produksi", class: "block mb-1 font-medium" %>
    <%= form.number_field :year,
        placeholder: "e.g. 2020",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF] focus:outline-none" %>
  </div>

  <div>
    <%= form.label :overall_width, "Lebar (mm)", class: "block mb-1 font-medium" %>
    <%= form.number_field :overall_width,
        placeholder: "e.g. 1750",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF] focus:outline-none" %>
  </div>

  <div>
    <%= form.label :overall_height, "Tinggi (mm)", class: "block mb-1 font-medium" %>
    <%= form.number_field :overall_height,
        placeholder: "e.g. 1500",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF] focus:outline-none" %>
  </div>

  <div>
    <%= form.label :overall_length, "Panjang (mm)", class: "block mb-1 font-medium" %>
    <%= form.number_field :overall_length,
        placeholder: "e.g. 4500",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF] focus:outline-none" %>
  </div>

  <div>
    <%= form.label :wheelbase, "Wheelbase (mm)", class: "block mb-1 font-medium" %>
    <%= form.number_field :wheelbase,
        placeholder: "e.g. 2700",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF] focus:outline-none" %>
  </div>

  <div>
    <%= form.label :tank_capacity, "Kapasitas Tangki (L)", class: "block mb-1 font-medium" %>
    <%= form.number_field :tank_capacity,
        placeholder: "e.g. 45",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF] focus:outline-none" %>
  </div>

</div>
