<div>
  <%= link_to(admin_car_models_path, class: 'text-red-800') do %>
    &larr; <%= t('views.cars.back') %>
  <% end %>
</div>

<% content_for :title, "Editing Car" %>

<h1>Edit Car</h1>

<%= form_with(model: [:admin, @car_model], local: true) do |form| %>
  <%= render "form", form: form %>
  <div class="mt-2">
    <%= form.submit 'Update', class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>

<% if @car_model.persisted? %>
  <div class="mt-3"
    data-controller="ai-helper--car-model"
    data-ai-helper--car-model-url-value="<%= car_spec_admin_ai_help_path %>"
    data-ai-helper--car-model-model-value="<%= @car_model.full_name %>"
    data-ai-helper--car-model-year-value="<%= @car_model.year %>"
    >
    <button data-action="click->ai-helper--car-model#fill">fetch from AI</button>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this car", [:admin, @car_model] %>
</div>
