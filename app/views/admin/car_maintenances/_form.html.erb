<% if car_maintenance.errors.any? %>
  <div class="bg-red-600 text-white p-3 rounded-lg mb-4">
    <h2 class="font-semibold mb-1">
      <%= pluralize(car_maintenance.errors.count, "error") %> prohibited this maintenance from being saved:
    </h2>
    <ul class="list-disc pl-5 text-sm">
      <% car_maintenance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="space-y-4">

  <!-- Car -->
  <div>
    <%= form.label :car_id, t('views.item.car'), class: "block mb-1 font-medium text-white" %>
    <%= form.select :car_id,
        @cars.map { |c| [c.name, c.id] },
        { include_blank: "- Pilih Mobil -" },
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Maintenance Type -->
  <div>
    <%= form.label :maintenance_type, t('views.car_maintenances.new.name'), class: "block mb-1 font-medium text-white" %>
    <%= form.select :maintenance_type,
        [['Oil Change', 'oil_change'],['AC Repair', 'ac_repair'],['Tire Repair', 'tire_repair'],['Other', 'other']],
        { include_blank: "- Pilih Jenis Maintenance -" },
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Title -->
  <div>
    <%= form.label :title, t('views.car_maintenances.new.title'), class: "block mb-1 font-medium text-white" %>
    <%= form.text_field :title,
        placeholder: "Contoh: Ganti Oli Bulanan",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Performed At -->
  <div>
    <%= form.label :performed_at, t('views.car_maintenances.new.time'), class: "block mb-1 font-medium text-white" %>
    <%= form.date_select :performed_at,
        { order: [:day, :month, :year], use_month_names: I18n.t('date.month_names') },
        class: "text-black rounded focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Description -->
  <div>
    <%= form.label :description, t('views.car_maintenances.new.description'), class: "block mb-1 font-medium text-white" %>
    <%= form.text_area :description,
        placeholder: "Detail pekerjaan dilakukan di sini...",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full h-40 focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Car Shop -->
  <div>
    <%= form.label :car_shop_id, t('views.item.car_shop'), class: "block mb-1 font-medium text-white" %>
    <%= form.select :car_shop_id,
        @car_shops.map { |c| [c.name, c.id] },
        { include_blank: "- Pilih Bengkel -" },
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

</div>
