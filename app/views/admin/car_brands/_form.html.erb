<%= form_with(model: [:admin, car_brand], class: "space-y-5") do |form| %>

  <% if car_brand.errors.any? %>
    <div class="bg-red-600 text-white p-3 rounded-lg">
      <h2 class="font-semibold mb-1">
        <%= pluralize(car_brand.errors.count, "error") %> prohibited this car brand from being saved:
      </h2>
      <ul class="list-disc pl-5 text-sm">
        <% car_brand.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Brand Name", class: "block mb-1 font-medium text-white" %>
    <%= form.text_field :name,
          class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <div>
    <%= form.submit "Save Brand",
          class: "bg-[#6D4AFF] text-white px-4 py-2 rounded-lg font-semibold hover:bg-[#5b3be6] transition" %>
  </div>

<% end %>
