<% if car.errors.any? %>
  <div class="bg-red-600 text-white p-3 rounded-lg mb-4">
    <h2 class="font-semibold mb-1">
      <%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:
    </h2>
    <ul class="list-disc pl-5 text-sm">
      <% car.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="space-y-4">

  <div>
    <%= form.label :name, t('views.cars.name'), class: "block mb-1 font-medium text-white" %>
    <%= form.text_field :name,
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <div>
    <%= form.label :year, t('views.cars.year'), class: "block mb-1 font-medium text-white" %>
    <%= form.select :year,
        (1900..Time.current.year).to_a.reverse,
        {},
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <div>
    <%= form.label :car_model_id, t('views.cars.model'), class: "block mb-1 font-medium text-white" %>
    <%= form.select :car_model_id,
        CarModel.all.map { |m| ["#{m.car_brand.name} #{m.model}", m.id] },
        { include_blank: "- Pilih Model -" },
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <div>
    <%= form.label :image, "Car Image", class: "block mb-1 font-medium text-white" %>
    <%= form.file_field :image,
        class: "text-white block w-full cursor-pointer" %>
  </div>

  <div>
    <%= form.label :company_id, "Perusahaan", class: "block mb-1 font-medium text-white" %>
    <%= form.select :company_id,
        Company.all.map { |c| [c.name, c.id] },
        { include_blank: "- Pilih Perusahaan -" },
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

</div>
