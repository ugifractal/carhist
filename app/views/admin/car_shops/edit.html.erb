<% content_for :title, "Editing Car Shop" %>

<div class="mb-4">
  <%= link_to admin_car_shops_path, class: "text-red-800 flex items-center gap-2" do %>
    &larr; <%= t('views.cars.back') %>
  <% end %>
</div>

<div class="flex items-center gap-4 mb-4">
  <% if @car_shop.approved_at.present? %>
    <%= button_to "Set Pending",
      pending_admin_car_shop_path(@car_shop),
      method: :patch,
      data: { turbo_confirm: "Are you sure to set pending?" },
      class: "bg-yellow-500 hover:bg-yellow-600 text-white rounded px-4 py-2" %>
  <% else %>
    <%= button_to "Approve",
      approve_admin_car_shop_path(@car_shop),
      method: :patch,
      data: { turbo_confirm: "Are you sure to approve?" },
      class: "bg-green-600 hover:bg-green-700 text-white rounded px-4 py-2" %>
  <% end %>
</div>

<h1 class="text-2xl font-bold mb-4">Edit Car Shop</h1>

<%= form_with(model: @car_shop, url: admin_car_shop_path(@car_shop), local: true) do |form| %>
  <%= render "form", car_shop: @car_shop, form: form %>

  <div class="mt-4">
    <%= form.submit "Update",
      class: "bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded" %>
  </div>
<% end %>
