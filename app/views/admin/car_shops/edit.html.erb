<div>
  <%= link_to(admin_car_shops_path, class: 'text-red-800') do %>
    &larr; <%= t('views.cars.back') %>
  <% end %>
</div>

<h1 class="text-2xl mb-4">Edit Car Shop</h1>

<%= form_with(model: [:admin, @car_shop], local: true) do |form| %>
  <div class="mt-2">
    <%= form.label :name %>
    <%= form.text_field :name, class:"border border-red-800 rounded" %>
  </div>

  <div class="mt-2">
    <%= form.label :user_id %>
    <%= form.select(:user_id, @users.map {|x| [x.email, x.id] }) %>
  </div>

  <div class="mt-2">
    <%= form.label :approved %>
    <%= form.check_box :approved %>
  </div>

  <div class="mt-2">
    <%= form.submit 'Update' %>
  </div>
<% end %>
