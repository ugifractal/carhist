<h1 class="text-2xl mb-4">Edit Car Shop</h1>

<%= form_with(model: @car_shop, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :approved_at, class: "block text-sm font-medium text-gray-700" %>
    <%= form.datetime_select :approved_at, class: "mt-1" %>
  </div>

  <div class="flex gap-4">
    <%= form.submit "Update", class: "bg-red-700 text-white px-4 py-2 rounded" %>
    <%= link_to "Back", admin_car_shops_path, class: "text-red-700 underline" %>
  </div>
<% end %>
