<div class="space-y-4">

  <!-- Name -->
  <div>
    <%= form.label :name, "Nama Toko", class: "block mb-1 font-medium text-white" %>
    <%= form.text_field :name,
        placeholder: "Contoh: Bengkel Jaya",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Category -->
  <div>
    <%= form.label :category, "Kategori", class: "block mb-1 font-medium text-white" %>
    <%= form.select :category,
        [
          ["Tire Shop", "tire_shop"],
          ["Ecu Shop", "ecu_shop"],
          ["Suspension", "suspension"],
          ["Other", "other"]
        ],
        { include_blank: "- Pilih Kategori -" },
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Description -->
  <div>
    <%= form.label :description, "Deskripsi", class: "block mb-1 font-medium text-white" %>
    <%= form.text_area :description,
        placeholder: "Tuliskan informasi bengkel...",
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full h-40 focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Latitude -->
  <div>
    <%= form.label :lat, "Latitude", class: "block mb-1 font-medium text-white" %>
    <%= form.text_field :lat,
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Longitude -->
  <div>
    <%= form.label :lng, "Longitude", class: "block mb-1 font-medium text-white" %>
    <%= form.text_field :lng,
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Company -->
  <div>
    <%= form.label :company_id, "Perusahaan", class: "block mb-1 font-medium text-white" %>
    <%= form.select :company_id,
        Company.all.map { |c| [c.name, c.id] },
        { include_blank: "- Pilih Perusahaan -" },
        class: "border border-[#6D4AFF] bg-transparent text-white rounded px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-[#6D4AFF]" %>
  </div>

  <!-- Approved -->
  <div class="text-sm text-white mt-3">
    <%= form.label :approved_at, "Status Persetujuan", class: "block font-medium mb-1" %>
    <% if @car_shop.approved_at.present? %>
      <span class="text-green-400 font-semibold">
        Disetujui pada <%= @car_shop.approved_at.strftime("%d %B %Y %H:%M") %>
      </span>
    <% else %>
      <span class="text-yellow-300 font-semibold">Pending</span>
    <% end %>
  </div>

</div>
