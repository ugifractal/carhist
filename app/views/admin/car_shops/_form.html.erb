<%= form_with model: @car_shop, url: admin_car_shops_path, local: true do |form| %>
  <div class="mt-2">
    <%= form.label :name %>
    <%= form.text_field :name, class:"border border-red-800 rounded" %>
  </div>

  <div class="mt-2">
    <%= form.label :user_id %>
    <%= form.select(:user_id, @users.map {|x| [x.email, x.id] }) %>
  </div>

  <div class="mt-2">
    <%= form.label :approved %>
    <%= form.check_box :approved %>
  </div>

  <div class="mt-2">
    <%= form.submit 'Create' %>
  </div>
<% end %>
