<div class="min-h-screen flex items-center justify-center bg-white">
  <div class="w-full max-w-sm text-center">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="text-left">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          placeholder: "your-email@example.com",
          class: "w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" %>
      </div>

      <%= f.submit "Send me reset password instructions",
        class: "w-full bg-teal-700 hover:bg-teal-800 text-white font-semibold py-3 rounded-md" %>
    <% end %>

    <div class="mt-4 space-y-1">
      <%= link_to "Log in", new_session_path(resource_name), class: "text-sm text-teal-700 hover:underline font-medium" %><br>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sm text-teal-700 hover:underline font-medium" %>
    </div>
  </div>
</div>
