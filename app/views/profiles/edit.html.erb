<div class="text-white">

  <div>
    <h1 class="text-2xl font-semibold mb-4">Edit Profile</h1>
  </div>

  <%= form_with(model: @user, url: profiles_path, local: true) do |f| %>

    <div class="mt-2">
      <%= f.label :language, "Language", class: "block mb-1 font-medium" %>
      <%= f.select :language,
            [["Indonesia", "id"], ["English", "en"]],
            {},
            class: "border border-[#6D4AFF] rounded text-sm bg-transparent px-2 py-1 focus:outline-none" %>
    </div>

    <div class="mt-3">
      <%= f.label :timezone, "Timezone", class: "block mb-1 font-medium" %>
      <%= f.select :timezone,
            ActiveSupport::TimeZone::MAPPING.to_a,
            {},
            class: "border border-[#6D4AFF] rounded bg-transparent px-2 py-1 text-sm focus:outline-none" %>
    </div>

    <div class="mt-4">
      <% if @user.image_url %>
        <div class="mb-2">
          <%= image_tag @user.image_url, class: "max-w-[200px] h-auto rounded-lg border border-[#6D4AFF]" %>
        </div>
      <% end %>

      <%= f.label :image, "Upload Avatar", class: "block mb-1 font-medium" %>
      <%= f.file_field :image, class: "border border-[#6D4AFF] rounded px-2 py-1 text-sm bg-transparent" %>
    </div>

    <div class="mt-5">
      <%= f.submit "Update",
            class: "px-4 py-2 bg-[#6D4AFF] hover:bg-[#5A3EDF] rounded-lg text-white font-medium transition" %>
    </div>

  <% end %>

  <div class="mt-7">
    <%= link_to "Edit Account",
          edit_user_registration_path,
          class: "text-[#6D4AFF] hover:underline font-medium" %>
  </div>

</div>
