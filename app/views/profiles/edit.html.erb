<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<div>
  <div>
    <h1>Edit Profile</h1>
  </div>
  <%= form_with(model: @user, url: profiles_path, local: true) do |f| %>
    <div class="mt-2">
      <div><%= f.label :languange, "Languange" %></div>
      <div><%= f.select :languange, [["Indonesia", "id"], ["English", "en"]], {}, class: "border border-red-800 rounded text-sm" %></div>
    </div>
    <div class="mt-3">
      <div><%= f.label :timezone, "Timezone" %></div>
      <div><%= f.select :timezone, ActiveSupport::TimeZone::MAPPING.to_a, {}, class: "border" %></div>
    </div>

    <div class="mt-3">
      <% if @user.image_url %>
        <div class="mb-2">
          <%= image_tag @user.image_url, class: "max-w-[200px] h-auto" %>
        </div>
      <% end %>

      <%= f.label :image, "Upload Avatar" %>
      <%= f.file_field :image %>
    </div>

    <div class="mt-3">
      <%= f.submit "Update", class: "px-2 py-2 bg-white rounded text-red-800 border-red-800 border-2" %>
    </div>
  <% end %>
  <div class="mt-7">
    <%= link_to("edit account", edit_user_registration_path, class: "text-red-800 underline") %>
  </div>
</div>
