<div class="mb-4">
  <%= link_to cars_path, class: "text-[#6D4AFF] hover:underline flex items-center gap-1" do %>
    <span class="text-lg">&larr;</span> <%= t('views.cars.back') %>
  <% end %>
</div>

<% content_for :title, "Editing Car" %>

<h1 class="text-2xl font-semibold text-white mb-4">
  <span class="text-[#6D4AFF]">Edit</span> Car
</h1>

<div class="p-5 border border-[#6D4AFF] rounded-xl shadow-md bg-[#1A1A22]/50 backdrop-blur-md">
  <%= form_with model: @car, local: true do |form| %>
    <%= render "form", car: @car, form: form %>

    <div class="mt-6">
      <%= form.submit 'Update',
            class: "bg-[#6D4AFF] text-white px-5 py-2 rounded-lg font-medium
                    hover:bg-[#5A3EDF] transition-all shadow-sm" %>
    </div>
  <% end %>
</div>
