<div>
  <div class="text-xl text-[#1C1424]">
    &larr;
    <%= link_to(car_path(@car), class: "text-xl text-[#1C1424] underline") do %>
      <%= t('views.cars.back') %>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <% content_for :title, t(".edit_car") %>

  <h1 class="text-2xl"><%= t(".edit_car") %></h1>
  <%= form_with model: @car, local: true do |form| %>
    <%= render 'form', car: @car, form: form %>
    <div class="mt-2">
      <%= form.submit 'Update', class: 'bg-[#1C1424] text-white px-3 py-2 rounded w-full lg:w-fit' %>
    </div>
  <% end %>
  <br>
</div>