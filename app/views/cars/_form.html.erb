<% if car.errors.any? %>
  <div class="bg-red-600 text-white p-3 rounded-lg mb-4">
    <h2 class="font-semibold mb-1">
      <%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:
    </h2>
    <ul class="list-disc pl-5 text-sm">
      <% car.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="text-white space-y-4">

  <div>
    <%= form.label :name, t('views.cars.name'), class: "block mb-1 font-medium" %>
    <%= form.text_field :name,
          class: "border border-[#6D4AFF] bg-transparent rounded px-3 py-2 w-full focus:outline-none" %>
  </div>

  <div>
    <%= form.label :year, t('views.cars.year'), class: "block mb-1 font-medium" %>
    <%= form.select :year,
          (1900..Time.current.year).to_a.reverse,
          {},
          class: "border border-[#6D4AFF] bg-transparent rounded px-3 py-2 w-full focus:outline-none" %>
  </div>

  <div>
    <%= form.label :car_model_id, t('views.cars.model'), class: "block mb-1 font-medium" %>
    <%= form.select :car_model_id,
          CarModel.all.map { |m| ["#{m.car_brand.name} #{m.model}", m.id] },
          {},
          class: "border border-[#6D4AFF] bg-transparent rounded px-3 py-2 w-full focus:outline-none" %>
  </div>

  <div>
    <%= form.label :image, "Car Image", class: "block mb-1 font-medium" %>
    <%= form.file_field :image,
          class: "border border-[#6D4AFF] bg-transparent rounded px-3 py-2 w-full focus:outline-none" %>
  </div>

</div>
