<%= form_with(model: car) do |form| %>
  <% if car.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
        <% car.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-2">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'border' %>
  </div>

  <div class="mt-2">
    <%= form.label :year, style: "display: block" %>
    <%= form.select(:year, (1900..(Time.now.year)).map { |x| [x,x] }.reverse, class: 'border') %>
  </div>

  <div class="mt-2">
    <%= form.label :car_model_id, style: "display: block" %>
    <%= form.select :car_model_id, CarModel.all.map { |m| ["#{m.car_brand.name} #{m.model}", m.id] } %>
  </div>

  <div class="mt-4">
    <%= form.submit(class: 'bg-red-800 text-white rounded py-2 px-3') %>
  </div>
<% end %>
