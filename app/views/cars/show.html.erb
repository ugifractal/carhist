<div>
  <%= link_to(cars_path, class: 'text-red-800') do %>
    &larr; <%= t('views.cars.back') %>
  <% end %>
</div>
<p style="color: green"><%= notice %></p>

<%= render @car %>

<div class="mt-6">
  <div>
  <% if @car.image %>
    <%= link_to @car.image.url do %>
      <%= image_tag(@car.image.url, class:"px-5 w-60 h-60 object-cover") %>
    <% end %>
  <% else %>
    <p>No image available.</p>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to("Show Device Loggers", car_device_loggers_path(@car), class: "bg-red-800 text-white px-2 py-2 rounded") %>
</div>
