<div class="flex gap-x-3 items-center">
  <%= link_to(cars_path, class: 'text-red-800') do %>
    &larr; <%= t('views.cars.back') %>
  <% end %>

  <%= link_to(t(".car_maintenances"), car_car_maintenances_path(@car), class: "text-red-800") %>
  <%= link_to(t(".device_loggers"), car_device_loggers_path(@car), class: "text-red-800") %>
</div>

<%= render @car %>

<div class="mt-6">
  <div>
  <% if @car.image %>
    <%= link_to @car.image.url do %>
      <%= image_tag(@car.image.url, class:"px-5 w-60 h-60 object-cover") %>
    <% end %>
  <% else %>
    <p>No image available.</p>
  <% end %>
</div>
