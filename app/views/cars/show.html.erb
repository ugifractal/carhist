<div>
  <%= link_to(car_path, class: 'text-red-800') do %>
    &larr; <%= t('views.cars.back') %>
  <% end %>
</div>
<p style="color: green"><%= notice %></p>

<%= render @car %>

<div class="flex space-x-2">
  <%= link_to "Edit this car", edit_car_path(@car), class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-800 hover:bg-red-500 font-medium cursor-pointer" %>
  <%= button_to "Destroy this car", @car, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-800 hover:bg-red-500 font-medium cursor-pointer" %>
</div>
