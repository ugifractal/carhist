<%= form_with model: @car_shop, url: car_shops_path, local: true do |form| %>
  <div class="mt-2">
    <%= form.label :name %><br>
    <%= form.text_field :name, class:"border border-red-800 rounded" %>
  </div>

  <div class="mt-2">
    <div><%= "Category" %></div>
    <div>
      <%= form.select(:category,
       [['Tire Shop', 'tire_shop'],['Ecu Shop', 'ecu_shop'],['Suspension', 'suspension'],['Other', 'other']], {}, class:"border border-red-800 rounded") %>
    </div>
  </div>

  <div class="mt-2">
    <%= form.submit 'Create', class: 'bg-red-800 text-white rounded py-2 px-3'%>
  </div>
<% end %>