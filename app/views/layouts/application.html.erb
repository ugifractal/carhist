<html>
  <head>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
  </head>
  <body>
    <div>
      <div class="flex items-center justify-between bg-red-800 text-white py-5 px-3">
        <div>
          <h2 class="text-4xl">Carhist</h2>
        </div>
        <div data-controller="account">
          <div data-action="click->account#toggle" class="rounded-full bg-white w-12 h-12 flex items-center justify-center cursor-pointer">
            <div class="text-2xl text-red-700">A</div>
          </div>
          <div data-account-target="menu" class="hidden absolute bg-white border border-red-700 w-60 right-1 py-3 px-2 text-red-800">
            <div>
              <%= link_to('Account', '#') %>
            </div>
            <div class="mt-4">
              <%= link_to('Logout', '#') %>
            </div>
          </div>
        </div>
      </div>
      <div class="flex">
        <div class="w-80 py-3 px-2 bg-gray-600 min-h-80">
          <div>
            <%= link_to('Cars', cars_path, class: 'underline text-white') %>
          </div>

          <% @cars.each do |car| %>
            <div>
              <%= link_to( car.name, car_car_maintenances_path(car), class: 'underline text-white ml-5' ) %>
            </div>
          <% end %> 
        </div>
        <div class="w-full px-5 py-5">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
