<h1 class="text-xl font-bold mt-4 text-center">Approved Car Shops</h1>

<% @car_shops.each do |shop| %>
  <div class="flex flex-wrap gap-6 justify-center my-6">
    <div class="w-48 h-48 border border-red-700 flex items-center justify-center text-red-700 text-sm">
      <%= link_to shop.name, "/public/car_shops/#{shop.id}/#{shop.name.parameterize}" %>
    </div>
  </div>
<% end %>

<div class="mt-4">
  <%= will_paginate(@car_shops) %>
</div>
