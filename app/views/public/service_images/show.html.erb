<div class="flex flex-wrap lg:flex-nowrap">
  <div>
    <%= link_to(@history_image.image_url(:medium), target: "_blank") do %>
      <%= image_tag(@history_image.image_url(:medium), class: 'px-5 object-cover') %>
    <% end %>
  </div>
  <div class="mt-4 lg:mt-0">
    <div class="text-2xl font-bold mb-4">
      <%= @history_image.title %>
    </div>
    <div class="mt-2">
      <%= sanitize(@markdown.render(@history_image.description.to_s)) %>
    </div>
  </div>
</div>

<div class="mt-10 flex flex-wrap items-center lg:gap-x-5 justify-center">
  <div class="text-2xl text-green-800">Repot nyatet perawatan mobil? yuk gabung </div>
