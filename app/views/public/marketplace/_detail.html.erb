<div id="show-frame">
  <div class="flex gap-x-10">
    <div class="w-[500px]">
      <% if (image = car.car_sell.car_sell_images.order(created_at: :asc)[params[:index].to_i]) %>
        <%= link_to(image_tag(image.image_url(:medium)), image.image_url(:medium)) %>
      <% else %>
        <%= image_tag("dummy-car.png") %>
      <% end %>
    </div>
    <div>
      <div>
        <%= sanitize(@markdown.render(car.car_sell.description)) %>
      </div>
      <div>
        Harga: <%= Money.from_cents(car.car_sell.price * 100, "IDR").format %>
      </div>
      <div>
        Lokasi: <%= [car.car_sell.village.name, car.car_sell.district.name, car.car_sell.regency.name, car.car_sell.province.name].join(", ") %>
      </div>
    </div>
  </div>
  <div class="flex gap-x-4 gap-y-5 mt-6">
    <% car.car_sell.car_sell_images.order(created_at: :asc).each_with_index do |image, index| %>
      <div class="w-48 overflow-hidden border rounded">
        <%= link_to(car_for_sale_path(token: car.car_sell.token, index:), data: { turbo_stream: true }) do %>
          <%= image_tag(image.image_url(:thumb)) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
