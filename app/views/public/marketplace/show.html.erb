<div>
  <div class="flex gap-x-10">
    <div class="w-[500px]">
      <% if @car.car_sell.car_sell_images.first %>
        <%= image_tag(@car.car_sell.car_sell_images.first.image_url(:medium)) %>
      <% else %>
        <%= image_tag("dummy-car.png") %>
      <% end %>
    </div>
    <div>
      <%= sanitize(@markdown.render(@car.car_sell.description)) %>
    </div>
  </div>
  <div class="flex gap-x-4 gap-y-5 mt-6">
    <% @car.car_sell.car_sell_images.each do |image| %>
      <div class="w-48 overflow-hidden border rounded">
        <%= image_tag(image.image_url(:thumb)) %>
      </div>
    <% end %>
  </div>
</div>
